upstream plovr {
  ip_hash;
  server {IP_HOST}:9810;
}

server {
  listen 9810;
  ssl  on;
  ssl_certificate  /etc/ssl/certs/bm_cert.pem;
  ssl_certificate_key  /etc/ssl/certs/bm_cert.pem;

  ssl_session_timeout  5m;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;

  location / {
    proxy_pass http://plovr/;
  }
}  
